        public MostrarFilhos()
        {
            InitializeComponent();
        }

        private void MostrarFilhos_Load(object sender, EventArgs e)
        {
            // TODO: esta linha de código carrega dados na tabela 'sGRRC1DataSet.FILHOS'. Você pode movê-la ou removê-la conforme necessário.
            if (this.dgv_MostrarFilhos.RowCount == 0)
            {

                btn_AdicionarFilhoMostrarFilhos.Visible = true;
                btn_ExcluirMostrarFilhos.Visible = false;
                btn_EditarMostrarFilhos.Visible = false;

              

            }

        }

        private void btn_EditarMostrarFilhos_Click(object sender, EventArgs e)
        {
            FilhoCatadorEditar EditarCatadorFilho = new FilhoCatadorEditar();
            string vqueryCatador = @"select [Catador] from CATADORES order by Catador ASC";

            string NomedoServidor = lbl_NomedoServidor.Text;
            EditarCatadorFilho.cbb_MaePaiEditarFilho.Items.Clear();
            EditarCatadorFilho.cbb_MaePaiEditarFilho.DataSource = ConexaoBancodeDados.dql(vqueryCatador, NomedoServidor);
            EditarCatadorFilho.cbb_MaePaiEditarFilho.DisplayMember = "Catador";
            EditarCatadorFilho.cbb_MaePaiEditarFilho.SelectedIndex = cbb_PaiMaeMostrarFilhos.SelectedIndex;
            EditarCatadorFilho.lbl_NomedoServidor.Text = NomedoServidor;

            Criptografia cryptography = new Criptografia(System.Configuration.ConfigurationManager.AppSettings[""]);
            string DataDecrip = cryptography.Decriptar(this.dgv_MostrarFilhos.CurrentRow.Cells[1].Value.ToString());

            EditarCatadorFilho.txt_DatadeNascimentoFilhoEditar.Text = DataDecrip;
            EditarCatadorFilho.cbb_GeneroFilhoEditar.Text = this.dgv_MostrarFilhos.CurrentRow.Cells[2].Value.ToString();
            EditarCatadorFilho.txt_FilhoIDFilhoCatadorEditar.Text = this.dgv_MostrarFilhos.CurrentRow.Cells[3].Value.ToString();
            EditarCatadorFilho.Show();
        }

        private void btn_AdicionarFilhoMostrarFilhos_Click(object sender, EventArgs e)
        {
            CadastroFilho filho = new CadastroFilho();

        

            filho.txt_MaePaiCadastroFilho.Text = label1.Text;
            filho.lbl_NomedoServidor.Text = lbl_NomedoServidor.Text;
            filho.Show();
        }

        private void fILHOSBindingSource3_CurrentChanged(object sender, EventArgs e)
        {

        }

        private void btn_ExcluirMostrarFilhos_Click(object sender, EventArgs e)
        {
            if (dgv_MostrarFilhos.Rows.Count == 0)
            {
                MessageBox.Show("Filho(a) não selecionado(a).");
                return;

            }
            else
            {
                var Aviso = MessageBox.Show("Esta ação será irreversível. Deseja continuar?", "Exclusão de Filho(a)", MessageBoxButtons.YesNo);

                if (Aviso == DialogResult.Yes)
                {
                    string NomedoServidor = lbl_NomedoServidor.Text;
                    string IDdoFilho = this.dgv_MostrarFilhos.CurrentRow.Cells[3].Value.ToString();
                    string ExclusaoFilhos = @"DELETE FROM FILHOS WHERE [ID_Filho]='" + IDdoFilho + "';";
                    ConexaoBancodeDados.dql(ExclusaoFilhos, NomedoServidor);
                    MessageBox.Show("Filho(a) excluído(a) com sucesso!");


                    string vqueryFilho = @"SELECT [Pai/Mae], [Data de Nascimento], [Gênero], [ID_Filho] FROM FILHOS WHERE [Pai/Mae] ='" + label1.Text + "' ;";
                    dgv_MostrarFilhos.DataSource = ConexaoBancodeDados.dql(vqueryFilho, NomedoServidor);
                }
                else
                {
                    return;
                }

            }
        }

        private void btn_CancelarMostrarFilhos_Click(object sender, EventArgs e)
        {
            this.Close();
        }

        private void dgv_MostrarFilhos_MouseEnter(object sender, EventArgs e)
        {
            string NomedoServidor = lbl_NomedoServidor.Text;
            string vqueryFilho = @"SELECT [Pai/Mae], [Data de Nascimento], [Gênero], [ID_Filho] FROM FILHOS WHERE [Pai/Mae] ='" + label1.Text + "' ;";
            dgv_MostrarFilhos.DataSource = ConexaoBancodeDados.dql(vqueryFilho, NomedoServidor);

        }
    }
}
