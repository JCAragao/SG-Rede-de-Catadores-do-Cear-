using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.SqlClient;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace Sistema_de_Gerenciamento_da_Rede_de_Catadores_do_Ceará__Versão_Teste_
{
    public partial class Funções : Form
    {
        public Funções()
        {
            InitializeComponent();
        }

        private void Funções_Load(object sender, EventArgs e)
        {

        }

        //Cadastro de nova função
        private void btn_AdicionarNovaFuncao_Click(object sender, EventArgs e)
        {

            if (cbb_AssociacaoFuncoes.SelectedIndex != -1)
            {
                string NomedoServidor = lbl_NomedoServidor.Text;
                SqlConnection Conectar = new SqlConnection("Data Source=DESKTOP-" + NomedoServidor + "\\SQLEXPRESS;Initial Catalog=SGRRC1;Integrated Security=True");
                Conectar.Open();

                string associacao = cbb_AssociacaoFuncoes.Text;
                string funcoes = txt_Funcoes.Text;

                SqlCommand cmd = new SqlCommand("insert into [FUNCOES] ([Funcao], [Unidade]) values ('" + funcoes + "', '" + associacao + "')\r\n", Conectar);
                cmd.ExecuteNonQuery();
                Conectar.Close();
                this.Close();

            }
            else
            {
                string associacao = txt_AssociacaoFuncoes.Text;
                string funcoes = txt_Funcoes.Text;

                string NomedoServidor = lbl_NomedoServidor.Text;
                SqlConnection Conectar = new SqlConnection("Data Source=DESKTOP-" + NomedoServidor + "\\SQLEXPRESS;Initial Catalog=SGRRC1;Integrated Security=True");
                Conectar.Open();
                SqlCommand cmd = new SqlCommand("insert into [FUNCOES] ([Funcao], [Unidade]) values ('" + funcoes + "', '" + associacao + "')", Conectar);
                cmd.ExecuteNonQuery();
                Conectar.Close();
                this.Close();
            }
        }

        //Exclusão de função.
        private void btn_Excluir_Click(object sender, EventArgs e)
        {

            string NomedoServidor = lbl_NomedoServidor.Text;
            SqlConnection Conectar = new SqlConnection("Data Source=DESKTOP-'" + NomedoServidor + "'\\SQLEXPRESS;Initial Catalog=SGRRC1;Integrated Security=True");
            Conectar.Open();

            if (cbb_AssociacaoFuncoes.SelectedIndex == -1)
            {
                SqlCommand cmd = new SqlCommand("delete [Funcao] from [FUNCOES] where [Unidade] = '" + cbb_AssociacaoFuncoes.Text + "')");
                cmd.ExecuteNonQuery();
                Conectar.Close();

            }
            else
            {
                SqlCommand cmd = new SqlCommand("delete [Funcao] from [FUNCOES] where [Unidade] =  '" + txt_AssociacaoFuncoes.Text + "')");
                cmd.ExecuteNonQuery();
                Conectar.Close();

            }

        }


        //Ativação da visibilidade do text box e combox funções
        private void txt_AssociacaoFuncoes_DoubleClick(object sender, EventArgs e)
        {
            txt_AssociacaoFuncoes.Visible = false;
            cbb_AssociacaoFuncoes.Visible = true;
        }

        //Carregamento das associações
        private void cbb_AssociacaoFuncoes_Click(object sender, EventArgs e)
        {
            string NomedoServidor = lbl_NomedoServidor.Text;
            string vqueryAssociacao = @"SELECT [Nome Fantasia] FROM ASSOCIACAO ORDER BY [Nome Fantasia] ASC";
            cbb_AssociacaoFuncoes.DataSource = ConexaoBancodeDados.dql(vqueryAssociacao, NomedoServidor);
            cbb_AssociacaoFuncoes.DisplayMember = "Nome Fantasia";
            cbb_AssociacaoFuncoes.DisplayMember = ("Nome Fantasia");
        }      

        //Carregamento das funções
        private void cbb_Funcoes_Click(object sender, EventArgs e)
        {
            string NomedoServidor = lbl_NomedoServidor.Text;
            string vqueryFuncao = @"SELECT * FROM FUNCOES ORDER BY Funcao ASC ;";
            cbb_Funcoes.DataSource = ConexaoBancodeDados.dql(vqueryFuncao, NomedoServidor);
            cbb_Funcoes.DisplayMember = "Funcao";
        }   
    }
}
